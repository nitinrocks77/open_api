{
  "compilerOptions": {
    "module": "NodeNext",   
    "moduleResolution": "NodeNext",
    "baseUrl": "src", 
    "paths": {
      "features/*": ["features/*"]
    },
    "outDir": "dist",  
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,   
    "strict": true,    
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false  
  },
  "include": [
    "src/**/*"
  ],
}
